<Window x:Class="ScreenBuddies.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenBuddies"
        mc:Ignorable="d"
        Title="MainWindow" Height="375.116" Width="546.767">
    <Grid Background="DarkGray">
        <Button x:Name="btnStartClient" Content="Connect" HorizontalAlignment="Left" Margin="110,11,0,0"
                VerticalAlignment="Top" Width="116" Click="btnStartClient_Click" />
        <TextBox x:Name="tbxIP" Text="" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95"/>

        <TextBox x:Name="tbxConsole" ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True"
                 Background="WhiteSmoke" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top"
                 Margin="10,34,0,0" Height="265" Width="509" />
        <TextBox x:Name="tbxSend" HorizontalAlignment="Left" Height="23" Margin="10,304,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="509"
                 KeyDown="tbxSend_KeyDown"/>
    </Grid>
</Window>